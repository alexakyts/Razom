@model IEnumerable<Rule.BL.Models.UsersDTO>

<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>LastName</th>
            <th>Username</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.Username</td>
                <td>@item.Email</td>
            </tr>
        }
    </tbody>
</table>

<form asp-controller="Users" asp-action="Index" method="post">
    <button type="submit" class="btn btn-danger">Return</button>
</form>