@model Rule.BL.Models.UsersDTO

<h2>Delete Users</h2>

<form asp-controller="Users" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div>
        <h4>Are you sure you want to delete this users?</h4>
        <h5>Id:</h5>
        <p>@Model.Id</p>
        <h5>Name:</h5>
        <p>@Model.Name</p>
        <h5>lastName:</h5>
        <p>@Model.LastName</p>
        <h5>Username:</h5>
        <p>@Model.Username</p>
        <h5>Phone:</h5>
        <p>@Model.Phone</p>
        <h5>Email:</h5>
        <p>@Model.Email</p>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<form asp-controller="Users" asp-action="Index" method="post">
    <button type="submit" class="btn btn-danger">Return</button>
</form>
